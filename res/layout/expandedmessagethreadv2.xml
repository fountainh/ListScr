<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LT1"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical" >
    
     <LinearLayout
         android:id="@+id/LT1"
         android:layout_width="match_parent"
         android:layout_height="400dp"
         android:orientation="vertical" >

         <RelativeLayout
             android:id="@+id/LT2"
             android:layout_width="fill_parent"
             android:layout_height="40dp"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/textView267"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:paddingRight="40dp"
                 android:text="         " />

             <Button
                 android:id="@+id/buttonNegotiate"
                 style="?android:attr/buttonStyleSmall"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/textView267"
                 android:text="Negotiate" />

             <TextView
                 android:id="@+id/textView266"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/buttonNegotiate"
                 android:text="      " />

             <Button
                 android:id="@+id/buttonAcceptBid"
                 style="?android:attr/buttonStyleSmall"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/textView266"
                 android:text="Accept Bid" />
         </RelativeLayout>

         <ListView
             android:id="@+id/listView2"
             android:layout_width="fill_parent"
             android:layout_height="280dp"
             android:layout_weight="0.17"
             android:orientation="vertical" >
         </ListView>
     </LinearLayout>

</LinearLayout>